#!/bin/bash

# List user-installed packages, pick with fzf, preview with dnf info
pkg_name=$(dnf repoquery --userinstalled --qf '%{name}' | \
  fzf --multi --preview 'dnf info {1}' --preview-window=down:75%)

if [[ -n "$pkg_name" ]]; then
  sudo dnf -y remove $pkg_name
  sudo updatedb
  ~/.local/share/omarchy/bin/omarchy-show-done
fi
