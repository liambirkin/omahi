#!/bin/bash

echo "Installing Dropbox (Flatpak)â€¦"
# Ensure flatpak + flathub
sudo dnf -y install flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

# Install Dropbox client
flatpak install -y flathub com.dropbox.Client

echo "Starting Dropbox..."
# Replace 'dropbox-cli start' with flatpak run
uwsm app -- flatpak run com.dropbox.Client &>/dev/null &
echo "See Dropbox icon in the tray and right-click for setup."
